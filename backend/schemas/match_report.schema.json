{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "MatchReport",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "match_score_overall",
    "match_score_must",
    "match_score_nice",
    "matched_requirements",
    "missing_requirements"
  ],
  "properties": {
    "match_score_overall": { "type": "integer", "minimum": 0, "maximum": 100 },
    "match_score_must": { "type": "integer", "minimum": 0, "maximum": 100 },
    "match_score_nice": { "type": "integer", "minimum": 0, "maximum": 100 },
    "matched_requirements": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "default": []
    },
    "missing_requirements": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "default": []
    }
  }
}
